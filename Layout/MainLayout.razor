@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

            <MudLayout>

                <MudAppBar Color="Color.Dark" Elevation="2">
                    <MudIconButton Icon="@Icons.Material.Filled.Menu"
                                   Color="Color.Inherit"
                                   OnClick="@ToggleDrawer"
                                   Edge="Edge.Start" />
                    <MudText Typo="Typo.h6" Class="ml-2">📬 My Blazor App</MudText>
                    <MudSpacer />
                    <MudButton Variant="Variant.Text"
                               Color="Color.Inherit"
                               Href="https://learn.microsoft.com/aspnet/core/"
                               Target="_blank">
                        About
                    </MudButton>
                </MudAppBar>

                <MudDrawer @bind-Open="_drawerOpen"
                           Variant="DrawerVariant.Responsive"
                           Elevation="2">
                    <MudNavMenu>
                        <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
                        <MudNavLink Href="/counter" Icon="@Icons.Material.Filled.AdsClick">Counter</MudNavLink>
            <MudNavLink Href="/Dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
                    </MudNavMenu>
                </MudDrawer>

                <MudMainContent Class="p-4">
                    <MudContainer MaxWidth="MaxWidth.False" Class="mt-12">
                        @Body
                    </MudContainer>
                </MudMainContent>
            </MudLayout>



@code {
    private bool _drawerOpen = true;
    void ToggleDrawer() => _drawerOpen = !_drawerOpen;
}
